---
import BaseLayout from "@/layouts/BaseLayout.astro";
---

<BaseLayout
  title="Page Not Found Â· Reliably"
  description="This page does not exist"
>
  <div class="container">
    <div class="error error--404">
      <div class="error__heading">
        <h1 class="error__title">Page Not Found</h1>
        <p class="error__code">404</p>
      </div>
      <div class="error__content">
        <p class="error__message">
          The page you are looking for does not exist.
        </p>
        <p class="error__actions">
          <a href="/" class="button button--primary">Go to dashboard</a>
        </p>
      </div>
    </div>
  </div>
</BaseLayout>

<style lang="scss" scoped>
  .error {
    &__heading {
      display: flex;
      flex-direction: column-reverse;
      padding-top: var(--space-large);

      color: var(--text-color-bright);
      line-height: 1;
      text-align: center;
    }

    &__code {
      font-size: 24rem;
      font-weight: 700;
    }

    &__content {
      text-align: center;
    }

    &__message {
      font-size: 2.4rem;
    }

    &__actions {
      display: flex;
      justify-content: center;
      gap: var(--space-medium);
    }
  }
</style>
