{
  "metadata": {
    "name": "get_stressor",
    "labels": [
      "CPU, Memory",
      "Kubernetes"
    ],
    "annotations": null
  },
  "spec": {
    "provider": "chaostoolkit",
    "type": "experiment",
    "schema": {
      "configuration": [
        {
          "title": "Name",
          "key": "name",
          "help": "Name of a particular stressor",
          "placeholder": "",
          "default": "",
          "type": "string",
          "required": true
        },
        {
          "title": "Namespace",
          "key": "ns",
          "help": "Namespace where to get the stressor from",
          "placeholder": "",
          "default": "default",
          "type": "string",
          "required": false
        }
      ]
    },
    "template": {
      "version": "1.0.0",
      "title": "Get a stressor",
      "contributions": {},
      "description": "This experiment should perform a non-destructive operation against your system. Still we recommend you try it against a non-production environment. This kind of experiment is useful when you want to measure how your system is performing.",
      "tags": [
        "CPU, Memory",
        "Kubernetes"
      ],
      "configuration": {
        "name": {
          "type": "env",
          "key": "RELIABLY_PARAM_NAME",
          "default": "",
          "env_var_type": "str"
        },
        "ns": {
          "type": "env",
          "key": "RELIABLY_PARAM_NS",
          "default": "default",
          "env_var_type": "str"
        }
      },
      "extensions": [],
      "method": [
        {
          "name": "get-stressor",
          "type": "probe",
          "provider": {
            "type": "python",
            "module": "chaosk8s.chaosmesh.stress.probes",
            "func": "get_stressor",
            "arguments": {
              "name": "${name}",
              "ns": "${ns}"
            }
          }
        }
      ]
    }
  }
}