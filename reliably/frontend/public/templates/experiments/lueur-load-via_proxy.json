{
  "metadata": {
    "name": "Load Test via Proxy",
    "labels": [
      "reliability",
      "load",
      "fault"
    ],
    "annotations": null
  },
  "spec": {
    "provider": "chaostoolkit",
    "type": "experiment",
    "schema": {
      "configuration": [
        {
          "title": "URL",
          "key": "url",
          "help": "",
          "placeholder": null,
          "default": "http://localhost:7070",
          "type": "string",
          "required": true
        },
        {
          "title": "Duration",
          "key": "duration",
          "help": "Duration of the entire load test",
          "placeholder": null,
          "default": 60,
          "type": "integer",
          "required": false
        },
        {
          "title": "RPS",
          "key": "qps",
          "help": "Requests per second",
          "placeholder": null,
          "default": 5,
          "type": "integer",
          "required": false
        }
      ]
    },
    "template": {
      "version": "1.0.0",
      "title": "Send traffic to URL via a leur's proxy",
      "contributions": {},
      "description": "This experiment will perform an operation against your system. As this action may cause issues, we suggest you play it against a non-production environment first. These kind of experiments allow you to learn how your system reacts to a given change in its state.",
      "tags": [
        "reliability",
        "load"
      ],
      "configuration": {
        "url": {
          "type": "env",
          "key": "RELIABLY_PARAM_URL",
          "default": "",
          "env_var_type": "str"
        },
        "duration": {
          "type": "env",
          "key": "RELIABLY_PARAM_DURATION",
          "default": 60,
          "env_var_type": "int"
        },
        "qps": {
          "type": "env",
          "key": "RELIABLY_PARAM_QPS",
          "default": 5,
          "env_var_type": "int"
        },
        "proxy_addr": {
          "type": "env",
          "key": "RELIABLY_PARAM_PROXY_ADDR",
          "default": "http://localhost:3180",
          "env_var_type": "str"
        }
      },
      "extensions": [],
      "method": [
        {
          "name": "Load Test Endpoint",
          "type": "action",
          "provider": {
            "type": "python",
            "module": "chaosreliably.activities.load.actions",
            "func": "run_load_test",
            "arguments": {
              "url": "${url}",
              "duration": "${duration}",
              "qps": "${qps}",
              "proxy_addr": "${proxy_addr}"
            }
          }
        }
      ]
    }
  }
}