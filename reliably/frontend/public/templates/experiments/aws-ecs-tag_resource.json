{
  "metadata": {
    "name": "tag_resource",
    "labels": [
      "ECS",
      "AWS"
    ],
    "annotations": null
  },
  "spec": {
    "provider": "chaostoolkit",
    "type": "experiment",
    "schema": {
      "configuration": [
        {
          "title": "Tags",
          "key": "tags",
          "help": "List of tags to apply to the resource",
          "placeholder": "",
          "default": null,
          "type": "object",
          "required": true
        },
        {
          "title": "ARN",
          "key": "resource_arn",
          "help": "Resource ARN to which to set tags to",
          "placeholder": "",
          "default": "",
          "type": "string",
          "required": true
        }
      ]
    },
    "template": {
      "version": "1.0.0",
      "title": "Tags the provided resource(s) with provided tags",
      "contributions": {},
      "description": "This experiment will perform an operation against your system. As this action may cause issues, we suggest you play it against a non-production environment first. These kind of experiments allow you to learn how your system reacts to a given change in its state.",
      "tags": [
        "ECS",
        "AWS"
      ],
      "configuration": {
        "tags": {
          "type": "env",
          "key": "RELIABLY_PARAM_TAGS",
          "env_var_type": "json"
        },
        "resource_arn": {
          "type": "env",
          "key": "RELIABLY_PARAM_RESOURCE_ARN",
          "default": "",
          "env_var_type": "str"
        }
      },
      "extensions": [],
      "method": [
        {
          "name": "tag-resource",
          "type": "action",
          "provider": {
            "type": "python",
            "module": "chaosaws.ecs.actions",
            "func": "tag_resource",
            "arguments": {
              "tags": "${tags}",
              "resource_arn": "${resource_arn}"
            }
          }
        }
      ]
    }
  }
}