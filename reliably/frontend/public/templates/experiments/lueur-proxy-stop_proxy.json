{
  "metadata": {
    "name": "stop_proxy",
    "labels": ["lueur"],
    "annotations": null
  },
  "spec": {
    "provider": "chaostoolkit",
    "type": "experiment",
    "schema": {
      "configuration": [
        {
          "title": "Unset Proxy Variables",
          "key": "unset_http_proxy_variables",
          "help": "unset the `HTTP_PROXY` and `HTTPS_PROXY` environment variables",
          "placeholder": "",
          "default": false,
          "type": "boolean",
          "required": false
        }
      ]
    },
    "template": {
      "version": "1.0.0",
      "title": "Stop the lueur network proxy",
      "contributions": {},
      "description": "This experiment should perform a non-destructive operation against your system. Still we recommend you try it against a non-production environment. This kind of experiment is useful when you want to measure how your system is performing.",
      "tags": ["lueur"],
      "configuration": {
        "unset_http_proxy_variables": {
          "type": "env",
          "key": "RELIABLY_PARAM_UNSET_HTTP_PROXY_VARIABLES",
          "default": false,
          "env_var_type": "boolean"
        }
      },
      "extensions": [],
      "method": [
        {
          "name": "stop-proxy",
          "type": "action",
          "provider": {
            "type": "python",
            "module": "chaoslueur.actions",
            "func": "stop_proxy",
            "arguments": {
              "unset_http_proxy_variables": "${unset_http_proxy_variables}"
            }
          }
        }
      ]
    }
  }
}
