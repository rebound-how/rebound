{
  "metadata": {
    "name": "Run Simple Web Demo Server",
    "labels": ["lueur"],
    "annotations": null
  },
  "spec": {
    "provider": "chaostoolkit",
    "type": "experiment",
    "schema": {
      "configuration": [
        {
          "title": "Duration",
          "key": "duration",
          "help": "How long to run the proxy for. Set to 0 to run until explicitely stopped",
          "placeholder": "",
          "default": 45,
          "type": "float",
          "required": false
        }
      ]
    },
    "template": {
      "version": "1.0.0",
      "title": "Run Simple Web Demo Server",
      "description": "Starts a simple basic HTTP server that allows you to explore Reliably's features.",
      "tags": ["lueur", "latency", "network"],
      "contributions": {
        "availability": "none",
        "latency": "high",
        "security": "none",
        "errors": "none",
        "performance": "high"
      },
      "configuration": {
        "duration": {
          "type": "env",
          "key": "RELIABLY_PARAM_DURATION",
          "default": 45,
          "env_var_type": "float"
        }
      },
      "extensions": [
        {
          "name": "chatgpt",
          "messages": [
            {
              "role": "user",
              "content": "What are well-known public incidents that happened because of network degradations?"
            },
            {
              "role": "user",
              "content": "Can you give me a good scenario of latency incident using a normal distribution (mean/stddev)?"
            }
          ]
        }
      ],
      "method": [
        {
          "name": "Run Simple Web Demo Server",
          "type": "action",
          "background": true,
          "provider": {
            "type": "python",
            "module": "chaoslueur.actions",
            "func": "run_demo",
            "arguments": {
              "duration": "${duration}"
            }
          }
        }
      ]
    },
    "related": [
      {
        "block": "method",
        "name": "lueur-proxy-run_proxy"
      },
      {
        "block": "method",
        "name": "reliably-pauses-pause_execution"
      },
      {
        "block": "method",
        "name": "reliably-load-run_load_test"
      },
      {
        "block": "method",
        "name": "lueur-proxy-stop_proxy"
      },
      {
        "block": "method",
        "name": "reliably-load-verify_latency_percentile_from_load_test"
      }
    ]
  }
}
