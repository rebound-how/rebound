{
  "metadata": {
    "name": "cluster_status",
    "labels": ["AWS", "RDS"],
    "annotations": null
  },
  "spec": {
    "provider": "chaostoolkit",
    "type": "experiment",
    "schema": {
      "configuration": [
        {
          "title": "DB Cluster ID",
          "key": "cluster_id",
          "help": "Database cluster identifier",
          "placeholder": "",
          "default": null,
          "type": "string",
          "required": false
        },
        {
          "title": "Filters",
          "key": "filters",
          "help": "List of filters instead of a single identifier",
          "placeholder": "",
          "default": null,
          "type": "object",
          "required": false
        }
      ]
    },
    "template": {
      "version": "1.0.0",
      "title": "Returns the cluster status",
      "contributions": {},
      "description": "This experiment should perform a non-destructive operation against your system. Still we recommend you try it against a non-production environment. This kind of experiment is useful when you want to measure how your system is performing.",
      "tags": ["AWS", "RDS"],
      "configuration": {
        "cluster_id": {
          "type": "env",
          "key": "RELIABLY_PARAM_CLUSTER_ID",
          "env_var_type": "str"
        },
        "filters": {
          "type": "env",
          "key": "RELIABLY_PARAM_FILTERS",
          "env_var_type": "json"
        }
      },
      "extensions": [],
      "method": [
        {
          "name": "cluster-status",
          "type": "probe",
          "provider": {
            "type": "python",
            "module": "chaosaws.rds.probes",
            "func": "cluster_status",
            "arguments": {
              "cluster_id": "${cluster_id}",
              "filters": "${filters}"
            }
          }
        }
      ]
    }
  }
}
