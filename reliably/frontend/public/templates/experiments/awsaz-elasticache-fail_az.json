{
  "metadata": {
    "name": "fail_az",
    "labels": [
      "AWS AZ",
      "AZ:ElastiCache"
    ],
    "annotations": null
  },
  "spec": {
    "provider": "chaostoolkit",
    "type": "experiment",
    "schema": {
      "configuration": [
        {
          "title": "Availability Zone",
          "key": "az",
          "help": "AZ to target",
          "placeholder": "",
          "default": "",
          "type": "string",
          "required": true
        },
        {
          "title": "Tags",
          "key": "tags",
          "help": "Match only resources with these tags",
          "placeholder": "",
          "default": "[{\"Key\": \"AZ_FAILURE\", \"Value\": \"True\"}]",
          "type": "object",
          "required": false
        },
        {
          "title": "Replication Groups",
          "key": "replication_groups",
          "help": "",
          "placeholder": "",
          "default": null,
          "type": "object",
          "required": false
        },
        {
          "title": "Dry Run",
          "key": "dry_run",
          "help": "Only perform a dry run for it",
          "placeholder": "",
          "default": false,
          "type": "boolean",
          "required": false
        }
      ]
    },
    "template": {
      "version": "1.0.0",
      "title": "Forces a failover for elasticache",
      "contributions": {},
      "description": "This experiment will perform an operation against your system. As this action may cause issues, we suggest you play it against a non-production environment first. These kind of experiments allow you to learn how your system reacts to a given change in its state.",
      "tags": [
        "AWS AZ",
        "AZ:ElastiCache"
      ],
      "configuration": {
        "az": {
          "type": "env",
          "key": "RELIABLY_PARAM_AZ",
          "default": "",
          "env_var_type": "str"
        },
        "tags": {
          "type": "env",
          "key": "RELIABLY_PARAM_TAGS",
          "default": "[{\"Key\": \"AZ_FAILURE\", \"Value\": \"True\"}]",
          "env_var_type": "json"
        },
        "replication_groups": {
          "type": "env",
          "key": "RELIABLY_PARAM_REPLICATION_GROUPS",
          "env_var_type": "json"
        },
        "dry_run": {
          "type": "env",
          "key": "RELIABLY_PARAM_DRY_RUN",
          "default": false,
          "env_var_type": "bool"
        }
      },
      "extensions": [],
      "method": [
        {
          "name": "fail-az",
          "type": "action",
          "provider": {
            "type": "python",
            "module": "azchaosaws.elasticache.actions",
            "func": "fail_az",
            "arguments": {
              "az": "${az}",
              "tags": "${tags}",
              "replication_groups": "${replication_groups}",
              "dry_run": "${dry_run}"
            }
          }
        }
      ]
    }
  }
}